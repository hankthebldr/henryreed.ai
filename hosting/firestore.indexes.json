    },
    {
      "collectionGroup": "scenarios",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "platform", "order": "ASCENDING" },
        { "fieldPath": "severity", "order": "DESCENDING" },
        { "fieldPath": "updatedAt", "order": "DESCENDING" }
