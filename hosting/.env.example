# Firebase Configuration
# Copy this file to .env.local and fill in your Firebase project details
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-ABCDEF1234

# Development Environment
NODE_ENV=development
NEXT_PUBLIC_USE_EMULATOR=false

# AI Service Configuration (for Cloud Functions)
# These are used by backend functions, not directly in client
OPENAI_API_KEY=sk-your-openai-api-key-here
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1

# Application Configuration
NEXT_PUBLIC_APP_NAME=TRR Management System
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_SUPPORT_EMAIL=support@henryreed.ai

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_BLOCKCHAIN_SIGNOFF=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Development URLs
NEXT_PUBLIC_DEV_API_URL=http://localhost:5001/your-project/us-central1
NEXT_PUBLIC_PROD_API_URL=https://us-central1-your-project.cloudfunctions.net

# Calendar Integration (cal.com)
NEXT_PUBLIC_CAL_COM_USERNAME=henryreed
NEXT_PUBLIC_CAL_COM_EVENT_TYPE=trr-review

# External Service URLs
NEXT_PUBLIC_GITHUB_REPO_URL=https://github.com/henryreed/cdr-platform
NEXT_PUBLIC_DOCUMENTATION_URL=https://docs.henryreed.ai

# Security Configuration
NEXT_PUBLIC_ENABLE_MULTI_TENANT=true
NEXT_PUBLIC_MAX_FILE_UPLOAD_SIZE=10485760
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# Emulator Configuration (Development Only)
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
FUNCTIONS_EMULATOR_HOST=localhost:5001

# Build Configuration
ANALYZE=false
BUNDLE_ANALYZE=false

# Database Configuration
NEXT_PUBLIC_DB_CACHE_TTL=300000
NEXT_PUBLIC_DB_RETRY_ATTEMPTS=3
NEXT_PUBLIC_DB_BATCH_SIZE=500

# Instructions:
# 1. Go to the Firebase Console (https://console.firebase.google.com/)
# 2. Create a new project or select an existing one
# 3. Go to Project Settings > General > Your apps
# 4. If you haven't added a web app, click "Add app" and select the web icon
# 5. Copy the config values from the Firebase SDK snippet
# 6. Replace the values above with your actual Firebase configuration
# 7. Add your OpenAI API key and other service configurations
# 8. Rename this file to .env.local
